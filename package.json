{
  "name": "@stevenn/smp-resolver-ng",
  "version": "2.2.0",
  "description": "General-purpose PEPPOL SMP resolver library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "src/data/*.json"
  ],
  "bin": {
    "smp-resolve": "./dist/cli/index.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "prepublishOnly": "npm run typecheck && npm run build && npm test",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "cli": "node dist/cli/index.js"
  },
  "keywords": [
    "peppol",
    "smp",
    "sml",
    "resolver",
    "as4",
    "e-invoicing"
  ],
  "author": "Steven Noels",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/stevenn/smp-resolver-ng.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@peculiar/x509": "^1.14.2",
    "fast-xml-parser": "^4.5.0",
    "undici": "^6.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.12",
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
